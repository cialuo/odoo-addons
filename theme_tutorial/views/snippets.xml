<?xml version="1.0" encoding="utf-8" ?>
<openerp>
  <data>
    <template id="snippet_testimonial" name="Testimonial snippet">
      <section class="snippet_testimonial oe_snippet_body mt16 mb16">
        <div class="container text-center">
          <div class="row">
            <div class="col-md-4">
              <img alt="client" class="img-circle" src="/theme_tutorial/static/src/img/china_thumb.jpg"/>
              <h3>Client Name</h3>
              <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            </div>
            <div class="col-md-4">
              <img alt="client" class="img-circle" src="/theme_tutorial/static/src/img/deers_thumb.jpg"/>
              <h3>Client Name</h3>
              <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            </div>
            <div class="col-md-4">
              <img alt="client" class="img-circle" src="/theme_tutorial/static/src/img/desert_thumb.jpg"/>
              <h3>Client Name</h3>
              <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            </div>
          </div>
        </div>
      </section>
    </template>

    <template id="place_into_bar" inherit_id="website.snippets" name="Place into bar">
      <xpath expr="//div[@id='snippet_structure']" position="inside">
        <div>
            <div class="oe_snippet_thumbnail">
                <img class="oe_snippet_thumbnail_img" src="/theme_tutorial/static/src/img/ui/snippet_thumb.png"/>
                <span class="oe_snippet_thumbnail_title">SNIP IT!</span>
            </div>
            <t t-call="theme_tutorial.snippet_testimonial"/>
        </div>
      </xpath>
    </template>
  </data>
</openerp>